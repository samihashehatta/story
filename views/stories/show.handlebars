<div class=" zl">
<div class="row">
    <div class="col s12 m8">
        <h3 class="white-text">{{story.title}}</h3>
        <small>{{{editIcon story.user.id user.id story.id false}}}</small>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">
                    {{formatDate story.date 'MMMM Do YYYY'}}
                </span>
                {{{story.body}}}
            </div>
        </div>
    {{#if story.allow}}
    <div class="card">
        <div class="card-content">
            <span class="card-title">
                Comments:
            </span>
            {{#if user}}

            <form action="/stories/comment/{{story.id}}" method="POST">
            <div class="input-field">
                <textarea name="commentBody" class="materialize-textarea" rows="10"></textarea>
            <label>add coment</label>
            </div>
            <input type="submit" class="btn waves-effect btn-flat deep-purple lighten-1 white-text " value="submit">
            </form>

            {{else}}
            <P>please login first.</P>
            {{/if}}
        </div>
    </div>
     {{#each story.comments}}
     <div class="card">
         <div class="card-content">
             <h5>{{commentBody}}</h5>
              <div class="chip">
                <img src="{{commentUser.img}}">
                <a href="/stories/user/{{commentUser.id}}"> {{commentUser.firstName}} {{commentUser.lastName}}
                </a>
        </div>
        <br>
        <small>Posted: {{formatDate commentDate 'MMMM do YYYY'}}</small>
         </div>
     </div>
     {{/each}}
    {{else}}
    {{/if}}
    </div>
    <div class="col m1"></div>
    <div class="col s12 m3">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.firstName}} {{story.user.lasrName}}</span>
                <img src="{{story.user.img}}" class="circle responsive-img">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user.id}}">More form {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
</div>
